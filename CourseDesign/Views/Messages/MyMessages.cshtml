@model IEnumerable<CourseDesign.Models.Message>

@{
    ViewBag.Title = "MyMessages";
}

<h2>@ViewBag.UserName</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Topic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MsgTime)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MsgTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MSG_ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MSG_ID}) |
            </td>
        </tr>
    }

</table>

<div>
    @Html.ActionLink("Back To List", "Index")
</div>
